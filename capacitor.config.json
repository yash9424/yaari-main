{
  "appId": "com.yaari.app",
  "appName": "Yaari",
  "webDir": "out",
  "bundledWebRuntime": false,
  "server": {
    "androidScheme": "https"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#FF6B35",
      "showSpinner": false
    },
    "Keyboard": {
      "resize": "native",
      "style": "dark"
    },
    "StatusBar": {
      "style": "light",
      "backgroundColor": "#FF6B35"
    }
  },
  "android": {
    "allowMixedContent": true,
    "captureInput": true,
    "webContentsDebuggingEnabled": true
  }
}